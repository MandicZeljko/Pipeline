pipeline{
    agent any
    options{
        ansiColor('xterm')
    }
    stages{
        stage('Develop')
            steps{
                 echo 'Development stage'
        }
        stage('Test'){
            steps{
                 echo 'Test stage'
            }
            
        }
        stage('Deploy'){
            steps{
                echo 'Deploy stage'
            }
        }
    }
    post{
        publishHTML ([allowMissing: false,
        alwaysLinkToLastBuild:false,
        keepAll: true,
        reportDir: 'reports',
        reportFiles: 'myreport.html',
        reportName: 'My Reports',
        reportTitles: 'The Report'])
 }
        
}